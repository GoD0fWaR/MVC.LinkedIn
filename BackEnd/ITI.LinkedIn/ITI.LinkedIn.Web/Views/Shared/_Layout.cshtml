<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!--<link href="bootstrap.css" rel="stylesheet" />-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    <title>LinkedIn</title>

</head>
<body>
    <!-- Profile Header Section -->
    <section class="p-3" id="ProfileSummary">
        <div class="container u-border">
            <div class="row">
                <!-- upper div that includes img -->
                <div class="col-sm-12 profile-imgs">
                    <!--profile img -->
                    <div class="position-absolute profile-img">
                        <img src="Assets/images/ProfilePic.jpg" class="rounded-circle">
                    </div>
                </div>
                <!-- down div -->
                <div class="col-sm-12">
                    <!-- upper section -->
                    <div class="row pt-sm-3 pb-sm-3">
                        <div class="col-sm-6 offset-6 dropdown">
                            <div class="d-flex justify-content-end align-items-center edit-profile">
                                <div class="p-2">
                                    <a role="button" href="#" class="dropdown-toggle btn-primary btn-lg add-section"
                                       id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Add Profile Section <!-- <i class="fas fa-sort-down"></i> -->
                                    </a>
                                    <!-- Add Profile Section Modal -->
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <!-- Add Profile Section form -->
                                        <form class="accordion list " id="accordionExample">
                                            <!-- intro card -->
                                            <div class="card">
                                                <div class="card-header" id="headingOne">
                                                    <h2 class="mb-0">
                                                        <a class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
                                                           aria-expanded="true" aria-controls="collapseOne">
                                                            <span class="card-title"> Intro</span>
                                                        </a>
                                                    </h2>
                                                </div>
                                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body">
                                                        <div>
                                                            <p class="font-weight-normal">
                                                                Help the right people find you by showing what opportunities
                                                                you’re open to.
                                                            </p>
                                                        </div>
                                                        <div style=" display flex; align-items center; font-size 2rem;">
                                                            <i class="fab fa-stumbleupon-circle p-2"></i>
                                                            <p class="p-2 font-weight-light">
                                                                Looking for job opportunities Show recruiters and others
                                                                you’re open to job opportunities.
                                                            </p>
                                                            <a> <i class="far fa-plus-square p-2"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- About card -->
                                            <div class="card">
                                                <div class="card-header d-flex justify-content-between " id="headingTwo">
                                                    <!-- <h2 class="mb-0 justify-content-between "> -->
                                                    <div class="p-2">
                                                        <a class="btn btn-link collapsed text-reset" type="button" data-toggle="collapse"
                                                           data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                            About
                                                        </a>
                                                    </div>
                                                    <div class="p-2" style="margin: auto 0;">
                                                        <i class="fas fa-chevron-down "></i>
                                                    </div>
                                                    <!-- </h2> -->
                                                </div>
                                                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body">

                                                        <div style=" display flex; align-items center; font-size 2rem;">
                                                            <i class="fas fa-indent"></i>
                                                            <div class="d-block">
                                                                <p>Education</p>
                                                                <p class=" font-weight-lighter p-0 m-0">
                                                                    Use summary to share what you do or the opportunities you’re looking for.
                                                                </p>
                                                            </div>
                                                            <a> <i class="far fa-plus-square p-2"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Background card -->
                                            <div class="card">
                                                <div class="card-header" id="headingThree">
                                                    <h2 class="mb-0">
                                                        <a class="btn btn-link collapsed text-reset" type="button" data-toggle="collapse"
                                                           data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                            Background
                                                        </a>
                                                    </h2>
                                                </div>
                                                <div id="collapseThree" class="collapse" aria-labelledby="headingThree"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body" style="font-size: 2rem;">
                                                        <a class="work text-reset" href="#">
                                                            <div class="d-flex m-auto p-2">
                                                                <div class="p-2" style=" display flex; align-items center; ">
                                                                    <i class="fas fa-briefcase" style="margin-right: 1rem;"></i>
                                                                    <div class="d-block">
                                                                        <p class=" font-weight-light p-0 m-0">3 positions on your profile.</p>
                                                                        <p>Work experience</p>

                                                                    </div>
                                                                </div>
                                                                <div class="p-2" style="margin: auto 0;">
                                                                    <i class="far fa-plus-square"></i>
                                                                </div>
                                                            </div>
                                                        </a>
                                                        <a class="education text-reset " href="# ">
                                                            <div class="d-flex m-auto p-2">
                                                                <div class="p-2" style=" display flex; align-items center; ">
                                                                    <i class="fas fa-university" style="margin-right: 1rem;"></i>
                                                                    <div class="d-block">
                                                                        <p>Education</p>
                                                                        <p class=" font-weight-lighter p-0 m-0">1 school in your profile.</p>

                                                                    </div>
                                                                </div>
                                                                <div class="p-2" style="margin: auto 0;">
                                                                    <i class="far fa-plus-square"></i>
                                                                </div>
                                                            </div>
                                                        </a>
                                                        <a class="licenses  text-reset" href="# ">
                                                            <div class="d-flex m-auto p-2">

                                                                <div class="p-2" style=" display flex; align-items center; ">

                                                                    <i class="fas fa-pager" style="margin-right: 1rem;"></i>
                                                                    <div class="d-block">
                                                                        <p>Licenses & Certifications</p>
                                                                        <p class=" font-weight-light p-0 m-0">
                                                                            Showcase your expertise with your credentials.
                                                                        </p>

                                                                    </div>
                                                                </div>
                                                                <div class="p-2" style="margin: auto 0;">
                                                                    <i class="far fa-plus-square"></i>
                                                                </div>
                                                            </div>
                                                        </a>

                                                        <a class="volunteer  text-reset" href="# ">
                                                            <div class="d-flex j m-auto p-2">
                                                                <div class="p-2" style=" display flex; align-items center; ">
                                                                    <i class="far fa-heart" style="margin-right: 1rem;"></i>
                                                                    <div class="d-block">
                                                                        <p class=" font-weight-light p-0 m-0">3 positions on your profile.</p>
                                                                        <p>Work experience</p>
                                                                    </div>
                                                                </div>
                                                                <div class="p-2" style="margin: auto 0;">
                                                                    <i class="far fa-plus-square"></i>
                                                                </div>
                                                            </div>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                            <!-- skills card -->
                                            <div class="card">
                                                <div class="card-header d-flex justify-content-between " id="headingFour">
                                                    <!-- <h2 class="mb-0 justify-content-between "> -->
                                                    <div class="p-2">
                                                        <a class="btn btn-link collapsed text-reset" type="button" data-toggle="collapse"
                                                           data-target="#collapseFour" aria-expanded="false" aria-controls="collapseTwo">
                                                            Skills
                                                        </a>
                                                    </div>
                                                    <div class="p-2" style="margin: auto 0;">
                                                        <i class="fas fa-chevron-down "></i>
                                                    </div>
                                                    <!-- </h2> -->
                                                </div>
                                                <div id="collapseFour" class="collapse" aria-labelledby="headingFour"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body">

                                                        <div style=" display flex; justify-content:space-between; align-items center; font-size 2rem;">
                                                            <i class="fas fa-medal"></i>
                                                            <div class="d-block">
                                                                <p class=" font-weight-bold">Slills</p>
                                                                <p class=" font-weight-lighter p-0 m-0">
                                                                    11 skills on your profile.
                                                                </p>
                                                            </div>
                                                            <div class="p-2" style="margin: auto 0;">
                                                                <i class="far fa-plus-square"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- accomplishment -->
                                            <div class="card">
                                                <div class="card-header d-flex justify-content-between " id="headingFive">
                                                    <!-- <h2 class="mb-0 justify-content-between "> -->
                                                    <div class="p-2">
                                                        <a class="btn btn-link collapsed text-reset" type="button" data-toggle="collapse"
                                                           data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                                            Acccomplishment
                                                        </a>
                                                    </div>
                                                    <div class="p-2" style="margin: auto 0;">
                                                        <i class="fas fa-chevron-down "></i>
                                                    </div>
                                                    <!-- </h2> -->
                                                </div>
                                                <div id="collapseFive" class="collapse" aria-labelledby="headingFive"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body">
                                                        <p class=" font-weight-bold">Additional Information</p>
                                                        <div style=" display flex; justify-content:space-between; align-items center; font-size 2rem;">
                                                            <i class="fas fa-medal"></i>
                                                            <div class="d-block">
                                                                <p>Request & Recommendation</p>
                                                                <p class=" font-weight-lighter p-0 m-0">
                                                                    Ask your connections to write you a recommendation.
                                                                </p>
                                                            </div>
                                                            <div class="p-2" style="margin: auto 0;">
                                                                <i class="far fa-plus-square"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Supported language -->
                                            <div class="card">
                                                <div class="card-header d-flex justify-content-between " id="headingSix">
                                                    <!-- <h2 class="mb-0 justify-content-between "> -->
                                                    <div class="p-2">
                                                        <a class="btn btn-link collapsed text-reset" type="button" data-toggle="collapse"
                                                           data-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                                            Supported & Language
                                                        </a>
                                                    </div>
                                                    <div class="p-2" style="margin: auto 0;">
                                                        <i class="fas fa-chevron-down "></i>
                                                    </div>
                                                    <!-- </h2> -->
                                                </div>
                                                <div id="collapseSix" class="collapse" aria-labelledby="headingSix"
                                                     data-parent="#accordionExample">
                                                    <div class="card-body">

                                                        <div style=" display flex; justify-content:space-between; align-items center; font-size 2rem;">
                                                            <i class="fas fa-globe"></i>
                                                            <div class="d-block">
                                                                <p>Add profile IN another language</p>
                                                                <p class=" font-weight-lighter p-0 m-0">
                                                                    You can add the above sections in other languages to make it easier for people to find
                                                                    you.
                                                                </p>
                                                            </div>
                                                            <div class="p-2" style="margin: auto 0;">
                                                                <i class="far fa-plus-square"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                                <div class="dropdown p-2">
                                    <a class="btn border border-dark btn-light" id="dropdownMenu2" data-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        More....
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                        <a class="dropdown-item">
                                            <i class="fas fa-share p-2"></i>Share Profile vs
                                            Message
                                        </a>
                                        <a class="dropdown-item"> <i class="fas fa-share p-2"></i>Save as PDF</a>
                                    </div>
                                </div>
                                <div class="p-2">
                                    <a href="#"><i class="fas fa-pencil-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- down section  -->
                    <div class="row p-3">
                        <div class="col-sm-6 user-info">
                            <div class="p-sm-3">
                                <div>
                                    <h2 class="d-inline-block">Nora </h2>
                                    <h2 class="d-inline-block"> Mohamed</h2>
                                </div>
                                <div>
                                    <h4> ITI Intake 40</h4>
                                </div>
                                <div class="d-flex">
                                    <h4>Egypt </h4>
                                    <ul class="info">
                                        <!-- Button trigger modal -->
                                        <li id="connection"><a href="#" class="btn btn-link"> 500+ Connections </a></li>
                                        <li id="contact">
                                            <a href="#" type="button" class="btn btn-link" data-toggle="modal" data-target="#Connection">
                                                Contact info
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 p-sm-3 experiences">
                            <div class="d-flex justify-content-end align-items-center">
                                <div class="sm-img"><img class="img-fluid" src="Assets/images/itiLogo.png"> </div>
                                <div> <a href="#" class="btn btn-link"> Information Technology Instutute ITI </a></div>
                            </div>
                            <div class="d-flex justify-content-end align-items-center">
                                <div class="sm-img"><img class="img-fluid" src="Assets/images/itiLogo.png"> </div>
                                <div> <a href="#" class="btn btn-link"> Information Technology Instutute ITI </a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <!-- Scripts -->
   
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="../Scripts/JavaScript.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script src="../Scripts/jquery-1.10.2.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
